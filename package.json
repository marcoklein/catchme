{
  "name": "catchme",
  "version": "0.0.1",
  "description": "Tagging game based on Phaser.",
  "main": "index.js",
  "scripts": {
    "test-watch": "mocha --watch",
    "build-server": "tsc --build tsconfig.json",
    "build-client": "webpack -p",
    "old-build-client": "tsc --build tsconfig-client.json",
    "watch-all": "nodemon -w \"src/**/*\" -e \"ts\" --exec \"tsc --build tsconfig.json & npm build-client & node built/\"",
    "old-build:live": "nodemon -w src/**/* -e ts --exec \"npm run-script build-client & npm run-script build-server & node built/\"",
    "build:live": "nodemon -w src/**/* -e ts --exec \"./node_modules/.bin/ts-node -- ./src/server/index.ts\""
  },
  "keywords": [
    "CatchMe",
    "game",
    "phaser",
    "architecture",
    "network",
    "multiplayer"
  ],
  "author": "Marco Klein",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.9.4",
    "awesome-typescript-loader": "^5.2.0",
    "source-map-loader": "^0.2.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.1",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "express": "^4.16.3",
    "phaser": "^3.11.0"
  }
}
